<% if action == :edit %>
    <% action_url = user_url(user.id) %>
<% else %> 
    <% action_url = users_url %>
<% end %>

<form action="<%= action_url %>" method="post"> 
    <%= auth_token %>

    <label>
        Email
        <br>
        <input type="text" name="user[email]" value="<% user.email %>"> 
    </label>
<br>

    <label>
        Password
        <br>
        <input type="text" name="user[password]" value="<%= user.password %>"> 
    </label>
<br>
<br>
    <input type="submit" 
    value="<%= (action == :edit) ? "Update User" : "Create User" %>">
</form>